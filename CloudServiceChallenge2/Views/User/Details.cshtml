@model CloudServiceChallenge2.Models.UserDataModel

@{
    ViewData["Title"] = "Details";
}

<h1>詳細</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            名前
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            勝利数
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfWins)
        </dd>
        <dt class="col-sm-2">
            敗北数
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDefeats)
        </dd>
        <dt class="col-sm-2">
            ドローの数
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDraws)
        </dd>
        <dt class="col-sm-2">タイトル</dt>

        @{
            var count = 0;
            var countTitle = 0;
            var titles = "";
        }
        <dd class="col-sm-10">
            @foreach (var item in Model.Relation)
            {


                @if (countTitle == 0)
                {
                    titles = item.Title.TitleName;
                    countTitle++;
                }
                else
                {
                    titles = ", " + item.Title.TitleName;
                    countTitle++;
                }
                @titles



            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId">編集</a> |
    <a asp-action="Index">リストに戻る</a>
</div>
